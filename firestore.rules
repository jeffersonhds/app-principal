// INSTRUÇÕES: Copie e cole este conteúdo no console Firebase:
// Firebase Console → Firestore Database → Rules → Editar → Publicar
//
// Estas regras garantem que cada usuário só acessa seus próprios dados.

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Perfis de usuário — cada usuário lê/escreve apenas o próprio documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Pedidos — usuário lê apenas pedidos onde userId == seu uid
    //           usuário cria apenas pedidos com seu próprio userId
    match /orders/{orderId} {
      allow read: if request.auth != null
                  && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.userId;
      // Atualização de status só pelo backend (via Admin SDK) — não permitida pelo cliente
      allow update, delete: if false;
    }

    // Favoritos — armazenados no documento do usuário (campo "favorites")
    // Coberto pela regra /users/{userId} acima.
    // Se favoritos migrarem para coleção separada, usar:
    // match /favorites/{docId} {
    //   allow read, write: if request.auth != null
    //                      && request.auth.uid == resource.data.userId;
    // }
  }
}
